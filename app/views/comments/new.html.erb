<div class="comment-form-container">
  <h1>New Comment</h1>

  <%= form_with model: @comment, url: user_post_comments_path, class: "comment-form", local: true do |form| %>
    <div class="form">
      <%= form.text_area :text, class: "comment-form-fields", placeholder: "comment..." %>
    </div>
    <div>
      <%= form.submit "Comment", class: "add-comment-btn" %>
    </div>
  <% end %>
</div>