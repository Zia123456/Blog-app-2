<div class="posts">
  <%= render partial: "shared/user", locals: { user: @user } %>
  <% @posts.each do |post| %>
    <%= link_to user_post_path(@user, post), class: "post" do %>
      <%= render "shared/posts", post: post %>
      <div class="comments">
        <%= render "shared/comments", post: post %>
      </div>
    <% end %>
  <% end %>
  <button type="button" class="btn">Pagination</button>
</div>