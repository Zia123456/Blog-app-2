<%= link_to user_path(user) do %>
    <div class="user-container">
      <div class="img-container">
        <%= image_tag user.photo %>
      </div>
      <div class="user_details">
        <h2 class="name"><%= user.name %></h2>
        <p class="nu-of-posts">Number of posts: <%= user.posts_counter %></p>
      </div>
    </div>
  <% end %>