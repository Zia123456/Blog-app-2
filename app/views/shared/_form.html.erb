<%= form_with model: @post, url: user_posts_path, class: "form", local: true do |form| %>
    <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div class="form-group">
        <%= form.label :text %>
        <%= form.text_field :text %>
    </div>

    <%= form.submit "Create post" %>
<% end %>