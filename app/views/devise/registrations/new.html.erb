<div class="main-login-container">
  <div class="logo-main-container">
    <div class="logo-container">
      <%= image_tag('blogify.png', alt: 'Logo', class: 'logo')  %>
    </div>
    <div class="text-container">
      <h1>Sign Up to share your thoughts with people.</h1>
    </div>  
  </div>

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form">
      <div class="form-items">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placehoder: "Username", class: "form-fields border-black form-title" %>
      </div>

      <div class="form-items">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placehoder: "Email", class: "form-fields border-black form-title"  %>
      </div>

      <div class="form-items">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placehoder: "Password", class: "form-fields border-black form-title" %>
      </div>

      <div class="form-items">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placehoder: "Confirm Password", class: "form-fields border-black form-title" %>
      </div>

      <div class="sign-btn-checkbox">
        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      </div>
    </div>  
  <% end %>

    <div class="sign-btn-checkbox links">
      <%= render "devise/shared/links" %>
    </div>
</div>
