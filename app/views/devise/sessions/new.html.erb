<div class="main-login-container">
  <div class="logo-main-container">
    <div class="logo-container">
      <%= image_tag('blogify.png', alt: 'Logo', class: 'logo')  %>
    </div>
    <div class="text-container">
      <h1>Blogify helps you share your thoughts with people.</h1>
    </div>  
  </div>
  <div class="login-form-container">
    <div class="sign-in-up border-black">
      <h1>Log in</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form">
          <div class="form-items">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-fields" %>
          </div>
          <div class="form-items">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-fields" %>
          </div>
        </div>
        <div class="sign-btn-checkbox">
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div> 
        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-sign-in" %>
        </div>
      <% end %>
      <div class="recovery-link">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


