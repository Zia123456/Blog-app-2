<div class="users-main-container">
  <div class="nav">
    <div class="nav-item-logo-container">
      <%= image_tag('blogify.png', alt: 'Logo', class: 'nav-logo')  %>
    </div>
    <div class="nav-item-search-container">
      <%= form_tag search_users_path, remote: true do %>
        <%= text_field_tag :query, nil, placeholder: 'Search...', id: 'search-query', class: 'search-nav' %>
      <% end %>
      <div id="search-results"></div>
    </div>
  </div>
  <% @users.each do |user| %>
    <%= render "shared/user", :user => user %>
  <% end %>
</div>
